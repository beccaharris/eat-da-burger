<div class="container">
  <div class="jumbotron">

    <!-- Header -->
    <div class="header">
      <div class="d-flex justify-content-center">
        <img class="burger-pic" src="/assets/img/burger.png" alt="Eat Da Burger Picture">
      </div>
      <h1 class="display-3">Eat-Da-Burger!</h1>
    </div>

      <!-- Form to add new burger --> 
      <div class="col-md-12">
        <div class="add-burger-form">
          <form action="/burgers" method="POST" class="add-burger-form">
            <div class="d-flex justify-content-center">
              <textarea class="form-control" id="type-of-burger" placeholder="Enter the type of burger you'd like to eat here!" name="burger_name"></textarea>
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-primary add-burger-button">Add Burger</button>
            </div>
          </form>
        </div>
      </div>

    <div class="row">
      
      <!-- List of burgers available to eat -->
      <div class="col-md-6">
        <h3>Burgers that haven't been eaten...</h3>
        <ul>
          {{#each burgers}} 
            {{#unless this.devoured}}
              <li>
                {{id}}. {{burger_name}}
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="eat-burger-form">
                  <button 
                    class="btn btn-primary" 
                    data-id="{{id}}" 
                    data-eat="{{devoured}}">
                      Eat Me!
                  </button>
                </form>
             </li>
            {{/unless}} 
          {{/each}}
        </ul>
      </div>



      <!-- List of burgers that have been eaten --> 
      <div class="col-md-6">
        <ul>
          {{#each burgers}} 
            {{#if this.devoured}}
              <li>
                {{id}}. {{burger_name}}
              </li>
            {{/if}} 
          {{/each}}
        </ul>
      </div>

    </div>
    <hr>
    <nav>
      <div class="d-flex justify-content-center">
        <p>&copy; 2018 Becca Harris</p>
      </div>
      <div class="d-flex justify-content-center">
        <a target="_blank" href="https://github.com/beccaharris/eat-da-burger">GitHub Repo</a>
      </div>
    </nav>
  </div>
</div>

